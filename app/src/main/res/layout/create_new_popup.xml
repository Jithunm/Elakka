<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:bottomLeftRadius="100dp"
    android:bottomRightRadius="100dp"
    android:orientation="vertical"
    android:topLeftRadius="100dp"
    android:topRightRadius="100dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="24dp">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="379dp"
        android:layout_height="73dp"
        android:gravity="center"
        android:text="Create New Expense"
        android:textColor="@color/purple_500"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/amount_text"
        android:layout_width="258dp"
        android:layout_height="69dp"
        android:ems="10"
        android:hint="Amount"
        android:inputType="number"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/expense_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expense_date_picker"
        app:layout_constraintVertical_bias="0.525" />

    <EditText
        android:id="@+id/expense_date_picker"
        android:layout_width="258dp"
        android:layout_height="66dp"
        android:ems="10"
        android:enabled="false"
        android:hint="Select Date"
        android:inputType="date"
        android:textColor="@color/purple_500"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner_expense_type"
        app:layout_constraintVertical_bias="0.309" />

    <Spinner
        android:id="@+id/spinner_expense_type"
        android:layout_width="258dp"
        android:layout_height="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.078" />

    <Button
        android:id="@+id/expense_save_button"
        android:layout_width="100dp"
        android:layout_height="57dp"
        android:background="@drawable/roundedlabel"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936" />

    <TextView
        android:id="@+id/calendar_select"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:background="@drawable/calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.509" />

</androidx.constraintlayout.widget.ConstraintLayout>